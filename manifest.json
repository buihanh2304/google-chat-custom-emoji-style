{
  "$schema": "https://json.schemastore.org/chrome-manifest",
  "name": "Google Chat Plus",
  "manifest_version": 3,
  "version": "0.3.0",
  "permissions": [
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://contacts.google.com/*",
        "*://docs.google.com/*",
        "*://chat.google.com/*",
        "*://mail.google.com/*"
      ],
      "js": ["assets/js/main.ts"],
      "all_frames": true
    }
  ]
}
